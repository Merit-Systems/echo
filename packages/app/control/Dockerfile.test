FROM node:20-alpine

# Install curl for healthcheck
RUN apk add --no-cache curl

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy monorepo workspace files
COPY pnpm-workspace.yaml pnpm-lock.yaml ./

# Copy all workspace package.json files to satisfy pnpm workspace requirements
COPY packages/app/control/package.json ./packages/app/control/
COPY packages/app/server/package.json ./packages/app/server/
COPY packages/sdk/ts/package.json ./packages/sdk/ts/
COPY packages/sdk/react/package.json ./packages/sdk/react/
COPY packages/tests/integration/package.json ./packages/tests/integration/

# Install dependencies for the entire workspace
RUN pnpm install --frozen-lockfile

# Copy echo-control source code
COPY packages/app/control/ ./packages/app/control/

# Set working directory to echo-control
WORKDIR /app/packages/app/control

# Generate Prisma client
RUN pnpm prisma:generate

# Build the application
RUN pnpm build

EXPOSE 3000

# Default command (can be overridden by docker-compose)
CMD ["pnpm", "start"]