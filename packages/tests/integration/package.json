{
  "name": "@echo/integration-tests",
  "version": "1.0.0",
  "private": true,
  "description": "Cross-SDK integration tests for Echo platform",
  "scripts": {
    "test": "echo 'no unit tests to run'",
    "test:watch": "vitest tests/",
    "test:echo-data-server": "vitest run tests/echo-data-server/",
    "test:oauth-protocol": "vitest run tests/oauth-protocol/",
    "test:oauth-refresh-expiry": "vitest run tests/oauth-protocol/oauth-refresh.test.ts",
    "test:e2e": "playwright test tests/e2e/",
    "env:setup": "./scripts/setup-integration-env.sh",
    "env:teardown": "./scripts/teardown-integration-env.sh",
    "env:reset": "docker-compose -f docker/docker-compose.yml down -v && pnpm env:setup",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "db:seed": "dotenv -e .env.test tsx scripts/seed-integration-db.ts",
    "db:reset": "dotenv -e .env.test tsx scripts/reset-integration-db.ts",
    "db:reset-and-seed": "pnpm db:reset && pnpm db:seed",
    "type-check": "tsc --noEmit",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.6",
    "@ai-sdk/google": "^2.0.7",
    "@ai-sdk/openai": "^2.0.16",
    "@merit-systems/echo-react-sdk": "workspace:*",
    "@merit-systems/echo-typescript-sdk": "workspace:*",
    "jose": "^6.0.11",
    "nanoid": "^5.1.5",
    "openai": "^4.81.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.5.2",
    "ai": "^5.0.18",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.29.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.53.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  }
}
